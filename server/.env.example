# ----------------------------
# Database Configuration
# ----------------------------

# MongoDB Connection String
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/<name>?retryWrites=true&w=majority

# ----------------------------
# Security
# ----------------------------

# JWT Secret Key (used for signing authentication tokens)
JWT_SECRET=your_jwt_secret_key

# ----------------------------
# Email / Notifications
# ----------------------------

# Nodemailer Email Account
NODEMAILER_USER=your_email@example.com
NODEMAILER_PASS=your_email_app_password
NODEMAILER_NAME=Expensease App

# ----------------------------
# Frontend Configuration
# ----------------------------

# Frontend URL for CORS and email links
FRONTEND_URL=http://localhost:5173

# ----------------------------
# Google OAuth
# ----------------------------

# Google Client ID for authentication
GOOGLE_WEB_CLIENT_ID=your-google-client-id
